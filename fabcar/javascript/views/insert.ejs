<h4 class="head-4">
    New Car info
</h4>
<%if(errors.length > 0) {%>

    <% for(var i=0; i < errors.length; i++) {%>
        <div class="alert alert-danger">
            <%=errors[i]%>
        </div>
    <%}%>

<%}%>

<form action="/register_c" method="post" class="col-6"
style="padding-left: 70px; font-size: 20px;" novalidate>

    <div class="form-group">
        <label>Car ID</label>
        <input type="text" class="form-control col-6" name="carid"
        required placeholder="Enter Car Id">
        <div class="invalid-feedback">
            Please Choose a Id
        </div>
    </div>

    <div class="form-group">
        <label>Car Color</label>
        <input type="text" class="form-control col-6" name="carcolor"
        required placeholder="Enter Car Color">
        <div class="invalid-feedback">
            Please Choose a car color
        </div>
    </div>

    <div class="form-group">
        <label>Company</label>
        <input type="text" class="form-control col-6" name="carcompany"
        required placeholder="Enter Car Company">
        <div class="invalid-feedback">
            Please Choose Car Company
        </div>
    </div>

    <div class="form-group">
        <label>Car Model</label>
        <input type="text" class="form-control col-6" name="carmodel"
        required placeholder="Enter Car Model">
        <div class="invalid-feedback">
            Please Choose a Car Model
        </div>
    </div>

    <div class="form-group">
        <label>Car Owner</label>
        <input type="text" class="form-control col-6" name="carowner"
        required placeholder="Enter Car Owner">
        <div class="invalid-feedback">
            Please Choose a Car Owner
        </div>
    </div>

    <div class="form-group">
        <input type="submit" class="btn ptn-primary col-3"
        value="Click to Register">
    </div>

</form>