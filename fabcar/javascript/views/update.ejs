<h4 class="head-4">
    New Car info
</h4>
<%if(errors.length > 0) {%>

    <% for(var i=0; i < errors.length; i++) {%>
        <div class="alert alert-danger">
            <%=errors[i]%>
        </div>
    <%}%>

<%}%>

<form action="/update_c" method="post" class="col-6"
style="padding-left: 70px; font-size: 20px;" novalidate>

    <div class="form-group">
        <label>Car ID</label>
        <input type="text" class="form-control col-6" name="carid"
        required placeholder="Enter Car Id">
        <div class="invalid-feedback">
            Please Choose a Id
        </div>
    </div>

    <div class="form-group">
        <label>New Owner Name</label>
        <input type="text" class="form-control col-6" name="ncarowner"
        required placeholder="Please Choose Car Owner">
        <div class="invalid-feedback">
            Please Choose Car Owner
        </div>
    </div>

    <div class="form-group">
        <input type="submit" class="btn ptn-primary col-3"
        value="Click to Update">
    </div>

</form>